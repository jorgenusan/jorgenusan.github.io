---
import { getLangFromUrl } from "@src/i18n/utils";
import { getCollection } from "astro:content";

const about = await getCollection("about");
const lang = getLangFromUrl(Astro.url);
let page = about.find(p => p.slug.startsWith(lang));

const { Content }: any = await page?.render();
---

<div class="w-full">
    <div class="prose max-w-none md:prose-lg prose-a:text-custom-blue hover:prose-a:text-purple-200 dark:prose-invert"><Content /></div>
</div>
